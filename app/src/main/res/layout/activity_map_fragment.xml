<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="rw.hackorient.dequeue.MapFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/big_padding"
        android:paddingTop="@dimen/big_padding">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/big_padding"
            android:layout_marginStart="@dimen/big_padding"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/title_home"
                app:srcCompat="@drawable/ic_location_on_black_24dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/big_padding">
     <AutoCompleteTextView
        android:id="@+id/pick_up"
        android:layout_width="match_parent"
        android:layout_height="@dimen/editText_size"
        android:layout_marginBottom="@dimen/big_padding"
        android:background="@drawable/edit_text"
        android:hint="@string/pick_up_address"
        android:inputType="text"
        android:padding="@dimen/small_padding"
        android:textColor="@color/green_accent_400"
        android:textColorHint="@color/green_accent_400"
        android:textCursorDrawable="@null"
        android:textSize="14sp">

        <requestFocus />
    </AutoCompleteTextView>
    </LinearLayout>
        <ImageView
            android:id="@+id/clear"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/big_padding"
            android:layout_marginRight="@dimen/big_padding"
            android:contentDescription="@string/clear"
            app:srcCompat="@drawable/ic_clear_all_24dp" />
    </LinearLayout>
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    </LinearLayout>
</FrameLayout>
